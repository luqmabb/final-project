<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Add My Project</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <style>
    .bordered {
      border: 1px solid black;
    }

    body {
      background-color: rgb(227, 231, 235);
    }

    textarea {
      resize: none;
      box-shadow: 10px 5px 20px darkgray;
    }
    input {
      box-shadow: 10px 5px 20px darkgray;
    }
    label{
      font-weight: 600;
    }
    
  </style>
</head>

<body>

  <!-- start navbar -->
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container ">
      <a href="/" class="me-4">
        <img src="../images/logo.png" alt="">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="d-flex justify-content-between" style="width: 100%;">
          <div class="navbar-nav">
            <a class="nav-link active me-2" aria-current="page" href="/">Home</a>
            <a class="nav-link" href="/addproject" style="font-weight: 600;">Add Project</a>
          </div>
          <div>
            <a href="/register" style="text-decoration: none; color: rgb(17,23,39);" class="me-4">Register</a>
                        <a href="/login" style="text-decoration: none; color: rgb(17,23,39)" class="me-4">Login</a>
            <a href="/contactme">
              <button class="btn btn-primary">Contact Me</button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <!-- end navbar -->

  <div class="container mt-5 p-3 mb-5" style="width: 60%;">
    <div style="display: flex; justify-content: center;">
      <p class="h2 my-2">Add My Project</p>
    </div>

    <form id="myForm" action="/addproject" method="post">
      <div class="mb-3">
        <label for="nameProject" class="form-label">Name Project</label>
        <input type="text" class="form-control" id="nameProject" name="nameProject"
          placeholder="Masukkan nama project anda" required>
      </div>

      <div class="row g-3 mb-3">
        <div class="col">
          <label for="startDate" class="form-label">Start Date</label>
          <input type="date" class="form-control" id="startDate" aria-label="First name" name="startDate" required>
        </div>
        <div class="col">
          <label for="endDate" class="form-label">End Date</label>
          <input type="date" class="form-control" id="endDate" aria-label="Last name" name="endDate" required>
        </div>
      </div>

      <div class="form-floating mb-3">
        <div>
          <label for="description" class="form-label">Description</label>
        </div>
        <textarea class="form-control" placeholder="Leave a comment here" id="description" name="description" style="height: 200px" required></textarea>
      </div>

      <label class="mb-3" for="">Technology</label><br>
      <div class=" d-flex flex-wrap mb-4" style="width: 40rem;">
        <div class="form-check mb-2" style="width: 40%;">
          <input class="form-check-input" type="checkbox" value="node" id="tech" name="node">
          <label class="form-check-label" for="node">
            Node JS
          </label>
        </div>
        <div class="form-check mb-2 " style="width: 40%;">
          <input class="form-check-input " type="checkbox" value="vue" id="tech" name="vue">
          <label class="form-check-label" for="vue">
            Vue JS
          </label>
        </div>
        <div class="form-check mb-2 " style="width: 40%;">
          <input class="form-check-input " type="checkbox" value="react" id="tech" name="react">
          <label class="form-check-label" for="react">
            React JS
          </label>
        </div>
        <div class="form-check mb-2 " style="width: 40%;">
          <input class="form-check-input" type="checkbox" value="php" id="tech" name="php">
          <label class="form-check-label" for="php">
            PHP
          </label>
        </div>
      </div>
      
      <label class="mb-2" for="">Upload Image</label>
      <div class="input-group mb-5">
        <input type="file" class="form-control" id="inputGroupFile01">
        <label class="input-group-text" for="inputGroupFile01">Upload</label>
      </div>
      
      <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>

  </div>

  <script src="../js/addproject.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>